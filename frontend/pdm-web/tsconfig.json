{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es5", "es2015.core", "es6", "es2015", "dom"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": false,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules",
            "./tools/manual_typings"
        ],
        "types": [
            "core-js",
            "express",
            "jasmine",
            "node",
            "systemjs"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ],
    "compileOnSave": false
}